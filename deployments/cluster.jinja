resources:
- name: {{ env["deployment"] }}
  type: container.v1.cluster
  properties:
    zone: {{ properties["zone"] }}
    cluster:
      initialClusterVersion: "1.15"
      enableTpu: true
      ipAllocationPolicy:
        useIpAliases: true
      nodePools:
      - name: default-pool
        initialNodeCount: 3
        autoscaling:
          enabled: true
          minNodeCount: 3
          maxNodeCount: 10
        config:
          machineType: n1-highmem-16
          oauthScopes:
          - https://www.googleapis.com/auth/cloud-platform
{% if properties["huge-pool"] %}
      - name: huge-pool
        initialNodeCount: 1
        autoscaling:
          enabled: true
          minNodeCount: 1
          maxNodeCount: 5
        config:
          machineType: n1-highmem-96
          oauthScopes:
          - https://www.googleapis.com/auth/cloud-platform
{% endif %}
{% if properties["double-v100"] %}
      - name: double-v100
        initialNodeCount: 1
        autoscaling:
          enabled: true
          minNodeCount: 1
          maxNodeCount: 5
        config:
          machineType: n1-standard-16
          accelerators:
          - acceleratorType: nvidia-tesla-v100
            acceleratorCount: 2
          oauthScopes:
          - https://www.googleapis.com/auth/cloud-platform
{% endif %}